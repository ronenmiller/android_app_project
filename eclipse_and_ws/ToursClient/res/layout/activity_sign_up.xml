<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    android:useDefaultMargins="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:windowSoftInputMode="stateVisible|adjustResize"
    >
	<GridLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:alignmentMode="alignBounds"
	    android:columnCount="4"
	    android:columnOrderPreserved="false"
	     >
	
	    <TextView
	        android:layout_columnSpan="4"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/sign_up_label"
	        android:textSize="32sp" />
	
	    <TextView
	        android:layout_columnSpan="4"
	        android:layout_gravity="start"
	        android:text="Please fill in your details to sign up:"
	        android:textSize="16sp" />
	
	    <TextView
	        android:layout_gravity="start"
	        android:text="@string/email_label" />
	
	    <EditText
	        android:id="@+id/signUpEmailInput"
	        android:ems="8"
	        android:hint="@string/email_hint"
	        android:inputType="textEmailAddress" />
	
	    <TextView
	        android:layout_column="0"
	        android:layout_gravity="start"
	        android:text="@string/username_label" />
	
	    <EditText
	        android:id="@+id/signUpUNameInput"
	        android:ems="8"
	        android:hint="@string/username_hint" />
	
	    <TextView
	        android:layout_column="0"
	        android:layout_gravity="start"
	        android:text="@string/ph_no_label" />
	
	    <EditText
	        android:id="@+id/signUpPhoneInput"
	        android:ems="8"
	        android:inputType="phone" />
	
	    <TextView
	        android:layout_column="0"
	        android:layout_gravity="start"
	        android:text="@string/password_label" />
	
	    <EditText
	        android:id="@+id/signUpPassInput"
	        android:ems="8"
	        android:inputType="textPassword" />
	
	    <TextView
	        android:layout_column="0"
	        android:layout_gravity="start"
	        android:text="@string/re_enter_pass_label" />
	
	    <EditText
	        android:id="@+id/signUpREPassInput"
	        android:ems="8"
	        android:inputType="textPassword" />
	
	    <Space
	        android:layout_column="0"
	        android:layout_columnSpan="3"
	        android:layout_gravity="fill"
	        android:layout_row="8" />
	
	    <Button
	        android:id="@+id/submitSignUpButton"
	        android:layout_column="0"
	        android:layout_gravity="center_horizontal|top"
	        android:layout_row="10"
	        android:text="@string/submit_label" />
	
	    <Button
	        android:id="@+id/backFromSUButton"
	        android:layout_column="1"
	        android:layout_gravity="center_horizontal|top"
	        android:layout_row="10"
	        android:text="@string/back_label" />
	</GridLayout>
</ScrollView>