<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <SwitchPreference
        android:title="@string/pref_notifications_label"
        android:key="@string/pref_notifications_key"
        android:switchTextOff="@string/pref_notifications_off"
        android:switchTextOn="@string/pref_notifications_on"
        android:defaultValue="true"
        tools:ignore="UnusedAttribute" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:title="@string/pref_sync_label"
        android:key="@string/pref_sync_key"
        android:defaultValue="@string/pref_sync_default"
        android:inputType="number"
        android:maxLength="4"
        android:singleLine="true" />

</PreferenceScreen>
