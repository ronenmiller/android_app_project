    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/TouricityTealTheme">
        <item name="colorPrimary">@color/touricity_grey</item>
        <item name="colorPrimaryDark">@color/touricity_dark_grey</item>
    </style>

    <!-- Main activity theme. -->
    <style name="MainTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Touricity.Main.NoTitle</item>
    </style>

    <!-- Main activity action bar styles -->
    <style name="ActionBar.Solid.Touricity.Main.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!-- Style for tours listview -->
    <style name="ToursListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
        <item name="asb_switchPreferenceStyle">@style/asb_Preference.SwitchPreference</item>
        <item name="android:textColor">@color/touricity_teal</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/SettingsActionBar</item>
        <item name="actionMenuTextColor">@color/touricity_teal</item>
    </style>

    <!-- ActionBar styles -->
    <style name="SettingsActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <!-- Support library compatibility -->
        <item name="background">@color/touricity_grey</item>
        <item name="titleTextStyle">@style/SettingsActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="SettingsActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>


